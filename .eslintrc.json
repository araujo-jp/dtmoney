{
  "extends": "@rocketseat/eslint-config/react",
  "plugins": [
    "eslint-plugin-import-helpers"
  ],
  "rules": {
    "no-unused-vars": "off",
    "import/extensions": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          "/^@/",
          [
            "parent",
            "sibling",
            "index"
          ]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.spec.js"
        ]
      }
    ]
  }
}